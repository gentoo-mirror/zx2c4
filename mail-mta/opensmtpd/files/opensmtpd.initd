depend() {
	need net
}

start() {
	ebegin "Starting OpenSMTPD"
	start-stop-daemon --start --quiet --exec /usr/sbin/smtpd
	eend ${?}
}

stop() {
	ebegin "Stopping OpenSMTPD"
	/usr/sbin/smtpctl stop
	eend ${?}
}
